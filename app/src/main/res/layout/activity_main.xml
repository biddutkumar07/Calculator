<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="2">

        <EditText
            android:id="@+id/inputET1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:hint="Number 1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/inputET2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Number 2"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLL1"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:hint="Result"
        android:textSize="20sp"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/linearLL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTV"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="4">

        <Button
            android:id="@+id/oneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/twoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/threeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/plusBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLL2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="4">

        <Button
            android:id="@+id/fourBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fiveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/sixBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/minusBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLL4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLL3"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="4">

        <Button
            android:id="@+id/sevenBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/eightBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/nineBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/multipleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

